{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "ðŸ§© Debug Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentKind=node",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": ["${workspaceFolder}/out/node/**/*.js"],
			"preLaunchTask": "npm: watch",
			"sourceMapRenames": true
		},
		{
			"name": "ðŸ§© Debug Web Extension",
			"type": "extensionHost",
			"request": "launch",
			"debugWebWorkerHost": true,
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentKind=web",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": ["${workspaceFolder}/out/web/**/*.js"],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "ðŸ§© Debug Web Extension in the browser",
			"type": "node",
			"request": "launch",
			"program": "./node_modules/.bin/vscode-test-web",
			"args": [
				"--browserType=chromium",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": ["${workspaceFolder}/out/web/**/*.js"],
			"preLaunchTask": "npm: watch"
		}
	]
}
