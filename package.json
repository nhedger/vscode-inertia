{
    "name": "inertia",
    "displayName": "Inertia.js",
    "version": "0.3.0",
    "description": "Visual Studio Code extension for Inertia.js",
    "categories": [
        "Other"
    ],
    "keywords": [
        "inertia",
        "inertiajs",
        "laravel",
        "vue"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nhedger/vscode-inertia.git"
    },
    "license": "MIT",
    "author": {
        "name": "Nicolas Hedger",
        "email": "nicolas@hedger.ch"
    },
    "publisher": "nhedger",
    "main": "./out/extension/node/extension.js",
    "browser": "./out/extension/web/extension.js",
    "scripts": {
        "build": "webpack build",
        "build:node": "webpack build --config webpack.node.config.ts",
        "build:web": "webpack build --config webpack.web.config.ts",
        "format": "prettier --write .",
        "lint": "eslint .",
        "package": "vsce package",
        "prepare": "lefthook install",
        "test": "pnpm run test:web && pnpm run test:node",
        "test:node": "node ./out/test-script.js --env node",
        "test:web": "node ./out/test-script.js --env web",
        "watch": "webpack watch",
        "watch:node": "webpack watch --config webpack.node.config.ts",
        "watch:web": "webpack watch --config webpack.web.config.ts"
    },
    "contributes": {
        "configuration": [
            {
                "title": "Inertia.js",
                "properties": {
                    "inertia.pagesFolder": {
                        "type": "string",
                        "default": "resources/js/Pages",
                        "description": "Root folder of your applications' pages. The path is relative to the root of the workspace."
                    },
                    "inertia.pages": {
                        "type": "string",
                        "default": "resources/js/Pages/**/*.vue",
                        "description": "A glob pattern to match the Vue components that you use as pages in your Inertia application."
                    }
                }
            }
        ]
    },
    "activationEvents": [
        "workspaceContains:**/*Inertia*",
        "onLanguage:php"
    ],
    "devDependencies": {
        "@hedger/prettier-config": "^1.2.0",
        "@semantic-release/git": "^10.0.1",
        "@types/chai": "^4.3.4",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.11.18",
        "@types/vscode": "^1.73.0",
        "@types/webpack": "^5.28.0",
        "@types/webpack-env": "^1.18.0",
        "@types/webpack-node-externals": "^2.5.3",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "@vscode/test-electron": "^2.2.2",
        "@vscode/test-web": "^0.0.26",
        "chai": "^4.3.7",
        "clean-webpack-plugin": "^4.0.0",
        "commander": "^9.5.0",
        "eslint": "^8.31.0",
        "glob": "^8.0.3",
        "lefthook": "^1.2.7",
        "mocha": "^10.2.0",
        "node-loader": "^2.0.0",
        "prettier": "^2.8.2",
        "prettier-plugin-packagejson": "^2.3.0",
        "semantic-release": "^19.0.5",
        "semantic-release-vsce": "^5.5.3",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "vsce": "^2.15.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "engines": {
        "vscode": "^1.73.0"
    },
    "icon": "inertia.png",
    "galleryBanner": {},
    "preview": true,
    "vsce": {
        "dependencies": false
    },
    "dependencies": {
        "vscode-uri": "^3.0.7"
    }
}
